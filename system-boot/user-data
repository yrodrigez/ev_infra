#cloud-config
hostname: {{DEVICE_HOSTNAME}}
manage_etc_hosts: true

users:
  - name: {{USER_NAME}}
    groups: [sudo]
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - {{SSH_PUBLIC_KEY_LINE}}

package_update: true
package_upgrade: true
packages:
  - git
  - ansible
  - openssh-server

write_files:
  - path: /etc/ansible/facts.d/secrets.fact
    content: |
      [secrets]
      cloudflare_token={{CLOUDFLARE_TOKEN}}
      github_pat={{GITHUB_PAT}}
      github_repo_url={{GITHUB_REPO_URL}}

  - path: /usr/local/bin/ansible_bootstrap.sh
    permissions: '0755'
    content: |
      #!/usr/bin/env bash
      set -euo pipefail
      
      # Logging setup
      LOG_FILE="/var/log/ansible_bootstrap.log"
      exec > >(tee -a "${LOG_FILE}") 2>&1
      
      echo "[$(date)] Starting Ansible Bootstrap..."

      REPO_URL="{{REPO_URL}}"
      CODE_DIR="/etc/ansible/code"

      echo "[$(date)] Cloning/Pulling repository from $REPO_URL..."
      if [ -d "$CODE_DIR/.git" ]; then
        git -C "$CODE_DIR" pull --ff-only
      else
        rm -rf "$CODE_DIR"
        git clone "$REPO_URL" "$CODE_DIR"
      fi

      export CLOUDFLARE_TOKEN="{{CLOUDFLARE_TOKEN}}"
      
      echo "[$(date)] Running Ansible Playbook..."
      cd "$CODE_DIR"
      ansible-playbook -i "localhost," -c local "playbooks/site.yml"
      
      echo "[$(date)] Bootstrap Completed Successfully!"

runcmd:
  - [ bash, /usr/local/bin/ansible_bootstrap.sh ]
